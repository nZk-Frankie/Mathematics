<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/registerStudentTeacher"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="128dp"
            android:minHeight="48dp"
            android:text="Register A Student"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/viewStudentTeacher"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="VIEW STUDENT"
            app:layout_constraintEnd_toEndOf="@+id/registerStudentTeacher"
            app:layout_constraintStart_toStartOf="@+id/registerStudentTeacher"
            app:layout_constraintTop_toBottomOf="@+id/registerStudentTeacher" />

        <Button
            android:id="@+id/viewTestHistoryTeacher"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="View Test History"
            app:layout_constraintEnd_toEndOf="@+id/viewStudentTeacher"
            app:layout_constraintStart_toStartOf="@+id/viewStudentTeacher"
            app:layout_constraintTop_toBottomOf="@+id/viewStudentTeacher" />

        <Button
            android:id="@+id/sendRecordButton"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Send Record"
            app:layout_constraintEnd_toEndOf="@+id/viewTestHistoryTeacher"
            app:layout_constraintStart_toStartOf="@+id/viewTestHistoryTeacher"
            app:layout_constraintTop_toBottomOf="@+id/viewTestHistoryTeacher" />

        <Button
            android:id="@+id/backTeacherPage"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:minHeight="48dp"
            android:text="BACK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="212dp"
            android:layout_marginTop="76dp"
            android:text="Welcome to the Admin Page"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="466dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>